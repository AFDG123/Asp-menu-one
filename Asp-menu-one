  colors[clr.Button]               = ImVec4(1.00, 0.19, 0.19, 0.40)
  colors[clr.ButtonHovered]        = ImVec4(0.80, 0.17, 0.00, 1.00)
  colors[clr.ButtonActive]         = ImVec4(0.89, 0.00, 0.19, 1.00)
  colors[clr.Header]               = ImVec4(0.33, 0.35, 0.36, 0.53)
